<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WeYouMentor - social learning</title>
    @Styles.Render("~/Content/css/bootstrap.css")
    @Styles.Render("~/Content/css/header.css")
    @Styles.Render("~/Content/css/font-awesome.css")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/jquery-2.1.3.js")
    @Scripts.Render("~/Scripts/bootstrap.min.js")

</head>
<body>
    <div id="header">
        <div class="container-fluid">
            <div class="row">
                <!-- vores logo i øvre venstre hjørne -->
                <div class="col-md-1">
                    <a id="logo" href="/" class="col-md-1 nav-bar-item "></a>
                </div>
                <div class="nav-bar-item col-md-2 searchBar">
                    <i class="col-md-1 fa fa-search"></i>
                    <input class="no-border" placeholder="Search" type="text">
                </div>
                @Html.ActionLink("Explore", "Explore", "Home", routeValues: null, htmlAttributes: new { @class = "col-md-1 nav-bar-item", id = "exploreLink" })
                @Html.ActionLink("Help", "Help", "Home", routeValues: null, htmlAttributes: new { @class = "col-md-1 nav-bar-item pull-right", id = "helpLink" })
                <div class="nav-bar-item half-col pull-right">
                    <a id="envelopeLink" href="/" class="col-md-1">
                        <i class="fa fa-envelope-o fa-lg"></i>
                    </a>
                </div>
                <div class="nav-bar-item half-col pull-right">
                    <a id="notificationLink" href="/">
                        <i class="fa fa-star-o fa-lg"></i>
                    </a>
                </div>
                <div class="nav-bar-item col-md-2 dropdown pull-right">
                    <div class="profileTab">
                        <span>First name</span>
                        <img src="~/Images/profileImg.jpg" width="30px" height="30px" class="profileImage" alt="This should have been your profile image" />
                        <span class="caret dropdown dropdown-toggle" type="button" id="menu1" data-toggle="dropdown">
                        </span>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Profile</a></li>
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">My Programs</a></li>
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Wishlist</a></li>
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Inbox</a></li>
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Notifcations</a></li>
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Log out</a></li>
                        </ul>
                    </div>
                </div>
                </div>
            </div>
        </div>
    @RenderBody()
</body>
</html>